{
  "name": "smart-templates",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run next:dev\" \"npm run electron:dev\"",
    "next:dev": "next dev",
    "build": "next build && tsc --project electron/tsconfig.json",
    "start": "next start",
    "lint": "next lint",
    "electron:dev": "wait-on tcp:3000 && tsc --project electron/tsconfig.json && electron . --dev",
    "electron:build": "npm run build && electron-builder",
    "electron:start": "electron .",
    "postinstall": "tailwindcss init -p"
  },
  "main": "electron/dist/main.js",
  "dependencies": {
    "next": "15.1.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/electron": "^1.4.38",
    "@types/next": "^8.0.7",
    "@types/node": "^20.17.19",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.14",
    "concurrently": "^9.1.2",
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8",
    "electron-is-dev": "^3.0.1",
    "eslint": "^9",
    "eslint-config-next": "15.1.7",
    "postcss": "^8.4.14",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.7.3",
    "wait-on": "^8.0.2"
  }
}
